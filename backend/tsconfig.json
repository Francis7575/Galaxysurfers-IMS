{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "noEmit": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "express",
      "cors",
      "cookie-parser",
      "dotenv",
      "pg",
      "uuid",
      "bcrypt"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}