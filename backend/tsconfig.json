{
"compilerOptions": {
  "target": "esnext",
  "module": "esnext",
  "strict": true,
  "jsx": "preserve",
  "importHelpers": true,
  "moduleResolution": "node",
  "skipLibCheck": true,
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "sourceMap": true,
  "baseUrl": ".",
  "types": [
    "node",
  ],
  "paths": {
    "@/*": [
      "src/*"
    ]
  },
},
"include": [
  "src/**/*.ts",
  "src/**/*.tsx",
],
"exclude": [
  "node_modules"
]
} 